<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	
	<bean name="json-string" class="org.catamarancode.spring.mvc.StringView">
	    <property name="contentType"><value>application/json</value></property>
		<property name="enableDebugLog"><value>true</value></property>		
    </bean>
	
	<bean name="csv-string" class="org.catamarancode.spring.mvc.StringView">
	    <property name="contentType"><value>text/csv</value></property>
    </bean>
	
</beans>